<section class='host-profile'>
  <section class='host-avatar'>
    <% if current_host.avatar.attached? %>
      <%= image_tag current_host.avatar, style: 'width: 200px;' %>
    <% end %>
  </section>
  <section class='host-details'>
    <h1><%= current_host.email %></h1>
    <h1>hostname: <%= current_host.username %></h1>
    <h1>birth_date: <%= current_host.birth_date %></h1>
  </section>

  <%= link_to "My Listings (#{@listings.count})", host_listings_path %>
  <br>
  <%= link_to "Pending Bookings (#{@pending_bookings.count})", host_dashboard_pending_bookings_path(current_host) %>
  <br>
  <%= link_to "Confirmed Bookings (#{@confirmed_bookings.count})", host_dashboard_confirmed_bookings_path(current_host) %>
  <br>
  <%= link_to "Cancelled Bookings (#{@cancelled_bookings.count})", host_dashboard_cancelled_bookings_path(current_host) %>
</section>