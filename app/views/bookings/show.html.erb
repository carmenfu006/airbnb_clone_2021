<section class='show-booking'>
  <h1>Listing Details</h1>
  <p>Host: <%= @booking.host.username %></p>
  <p>Destination: <%= @booking.listing.title %></p>
  <p>Location: <%= @booking.listing.location %></p>

  <h1>Booking Details</h1>
  <p>Ref_no: <%= @booking.ref_no %></p>
  <p>Check in: <%= @booking.check_in_date %></p>
  <p>Check out: <%= @booking.check_out_date %></p>
  <p>total: <%= @booking.total %></p>
  <p>status: <%= @booking.status %></p>

  <% if @booking.is_pending? %>
    <section class='stripe-card-element'>
      <div id='card'>
        <form action="/stripes" method="post" id="payment-form">
          <div class="form-row">
            <label for="card-element">
              Credit or debit card
            </label>
            <div id="card-element">
              <!-- A Stripe Element will be inserted here. -->
            </div>
            <input hidden='true' type="text" name='id' value=<%= @booking.id %>>
            <input hidden='true' type="text" name='amount' value=<%= @booking.total %>>
            <!-- Used to display Element errors. -->
            <div id="card-errors" role="alert"></div>
          </div>
        
          <button>Submit Payment</button>
        </form>
      </div>
    </section>
  <% end %>
</section>